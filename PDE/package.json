{
  "name": "pangch-display-editor",
  "version": "0.0.1",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "cross-env NODE_ENV=development nodemon --watch main.js --exec electron .",
    "dev": "concurrently --kill-others-on-fail -n \"main,renderer\" \"npm:dev:main\" \"npm:dev:renderer\"",
    "build": "vite build",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "vite": "^7.2.6",
    "nodemon": "^3.1.11"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "fflate": "^0.8.2",
    "three": "^0.181.2",
    "p-limit": "^7.2.0"
  },
  "author": {
    "name": "Pangch"
  },
  "build": {
    "extraResources": [
      {
        "from": "resources/Pangch-Face.ico",
        "to": "Pangch-Face.ico"
      }
    ],
    "productName": "pde-001",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
  "renderer-dist/**/*",
      "main.js",
      "preload.js",
      "hardcoded/**/*"
    ],
    "icon": "resources/Pangch-Face.ico",
    "mac": {
      "icon": "resources/Pangch-Face.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "resources/Pangch-Face.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "shortcutName": "PDE",
      "artifactName": "PDE-${version}-Setup.exe",
      "uninstallDisplayName": "팽치류 디플편집기",
      "installerIcon": "resources/Pangch-Face.ico",
      "uninstallerIcon": "resources/Pangch-Face.ico",
      "installerHeaderIcon": "resources/Pangch-Face.ico"
    }
  }
}