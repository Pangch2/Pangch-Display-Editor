{
  "name": "pangch-display-editor",
  "version": "0.0.1",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "cross-env NODE_ENV=development nodemon --watch main.js --exec electron .",
    "dev": "concurrently --kill-others-on-fail -n \"main,renderer\" \"npm:dev:main\" \"npm:dev:renderer\"",
    "build": "vite build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "core-util-is": "^1.0.3",
    "cross-env": "^10.0.0",
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "vite": "^7.1.5"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "pako": "^2.1.0",
    "three": "^0.180.0",
    "p-limit": "^7.1.1",
    "node-stream-zip": "^1.15.0"
  },
  "author": {
    "name": "Pangch"
  },
  "build": {
    "extraResources": [
      {
        "from": "resources/Pangch-Face.ico",
        "to": "Pangch-Face.ico"
      }
    ],
    "productName": "pde-001",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "icon": "resources/Pangch-Face.ico",
    "win": {
      "icon": "resources/Pangch-Face.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "shortcutName": "PDE",
      "artifactName": "PDE-${version}-Setup.exe",
      "uninstallDisplayName": "팽치류 디플편집기",
      "installerIcon": "resources/Pangch-Face.ico",
      "uninstallerIcon": "resources/Pangch-Face.ico",
      "installerHeaderIcon": "resources/Pangch-Face.ico"
    }
  }
}
